<Window x:Class="VapeTeam.Psimulex.UserInterface.InputTools.YesNoInputBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Yes or No InputBox" Height="92" Width="270" WindowStyle="None"  WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Activated="Window_Activated">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button Name="yesButton" FontSize="20" Click="yesButton_Click">Yes</Button>
        <Button Name="noButton" Grid.Column="1" FontSize="20" Click="noButton_Click">No</Button>
    </Grid>
</Window>
