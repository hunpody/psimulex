<UserControl x:Class="GraphDrawerPOC.GraphEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="286" Width="415"
    xmlns:cc="clr-namespace:GraphDrawerPOC"       
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Border}">
                <Setter Property="Background" Value="Red" />                
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/DesignerItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Canvas x:Name="canvas" Width="1500" Height="1200" Keyboard.KeyDown="canvas_KeyDown" Keyboard.PreviewKeyDown="canvas_KeyDown">

    </Canvas>

    <!--<cc:ResizingCanvas x:Name="canvas" Width="1500" Height="1200" Keyboard.KeyDown="canvas_KeyDown" Keyboard.PreviewKeyDown="canvas_KeyDown">

    </cc:ResizingCanvas>-->
</UserControl>
