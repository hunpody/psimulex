<Window x:Class="VapeTeam.Psimulex.UserInterface.SyntaxTreeConfigurationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SyntaxTreeConfigurationWindow" Height="371" Width="571" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid Name="MainGrid" >
        <Menu Height="22" Name="Menu" VerticalAlignment="Top">
            <MenuItem Name="File" Header="File">
                <MenuItem Name="Restore" Header="Restore" Click="Restore_Click"/>
                <MenuItem Name="SelectAll" Header="SelectAll" Click="SelectAll_Click"/>
                <MenuItem Name="UnSelectAll" Header="UnSelectAll" Click="UnSelectAll_Click"/>
                <Separator />
                <MenuItem Name="Exit" Header="Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" CanContentScroll="False" Margin="0,22,0,0">
            <WrapPanel Name="MainWrapPanel" >            
            </WrapPanel>  
        </ScrollViewer>
    </Grid>
</Window>
